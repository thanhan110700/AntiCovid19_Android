<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.Frag_Healthy_Canhan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_healthy_sot"
                android:text="Sốt"
                style="@style/checkbox_healthy"
                />
            <CheckBox
                android:id="@+id/check_healthy_ho"
                android:text="Ho"
                style="@style/checkbox_healthy"
                />
            <CheckBox
                android:id="@+id/check_healthy_khotho"
                android:text="Khó thở"
                style="@style/checkbox_healthy"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_healthy_daunguoi"
                android:text="Đau người, mệt mỏi"
                style="@style/checkbox_healthy"
                />
            <CheckBox
                android:id="@+id/check_healthy_khoemanh"
                android:text="Khỏe mạnh"
                style="@style/checkbox_healthy"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_healthy_guithongtin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Gửi thông tin"
            style="@style/btn_menu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Lịch sử theo dõi sức khỏe"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_lichsutheodoisuckhoe"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="45dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>