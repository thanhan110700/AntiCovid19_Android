<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4834d4"
    android:orientation="vertical"
    tools:context=".ui.Nhapsodienthoai">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="BAN CHỈ ĐẠO QUỐC GIA PHÒNG CHỐNG DỊCH BÊNH COVID-19"
    android:textSize="20sp"
    android:gravity="center"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:layout_marginTop="5dp"
    />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/iconapp"
        android:layout_gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_sodienthoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_first_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:inputType="phone"
            android:hint="Nhập số điện thoại"
            android:textColorHint="#dff9fb"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        >

        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Đăng ký"
            android:background="@drawable/btn_dangnhapdangky"/>

        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Đăng nhập"
            android:background="@drawable/btn_dangnhapdangky"/>
    </LinearLayout>

</LinearLayout>