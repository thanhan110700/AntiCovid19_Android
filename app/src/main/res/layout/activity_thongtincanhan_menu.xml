<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Thongtincanhan_menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.Khaibao"
        tools:ignore="MissingConstraints">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="THÔNG TIN CÁC NHÂN"
        android:textSize="25sp"
        android:textColor="#487eb0"/>


    <TextView
        style="@style/textview_khaibao"
        android:text="Họ và tên *"
        />

    <EditText
        android:id="@+id/ttcn_hoten"
        style="@style/edittext_khaibao" />

    <TextView
        style="@style/textview_khaibao"
        android:text="Số CMT/CCCD/Hộ chiếu *"
        />

    <EditText
        android:id="@+id/ttcn_cmt"
        style="@style/edittext_khaibao"
        android:inputType="number"/>

    <TextView
        style="@style/textview_khaibao"
        android:text="Mã số BHXH (Đây là thông tin quan trọng để cơ quan chức năng kiểm soát, hổ trợ bạn tốt hơn)"
        />

    <EditText
        android:id="@+id/ttcn_bhxh"
        style="@style/edittext_khaibao"
        android:inputType="number"/>

    <TextView
        style="@style/textview_khaibao"
        android:text="Ngày tháng năm sinh *"
        />

    <EditText
        android:id="@+id/ttcn_namsinh"
        style="@style/edittext_khaibao"
        tools:text="@tools:sample/date/ddmmyy"
        android:inputType="date"/>

    <TextView
        style="@style/textview_khaibao"
        android:text="Giới tính *"

        />

    <RadioGroup
        android:id="@+id/radio_sex"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/check_nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nam"/>
        <RadioButton
            android:id="@+id/check_nu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nữ"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Quốc tịch *"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ttcn_quoctich"
        style="@style/edittext_khaibao" />

    <TextView
        style="@style/textview_khaibao"
        android:text="Địa chỉ hiện tại *"
        />

    <EditText
        android:id="@+id/ttcn_diachihientai"
        style="@style/edittext_khaibao" />

    <TextView
        style="@style/textview_khaibao"
        android:text="Số điện thoại *"
        />

    <EditText
        android:id="@+id/ttcn_sdt"
        style="@style/edittext_khaibao"
        android:inputType="number"/>

    <TextView
        style="@style/textview_khaibao"
        android:text="Email"
        />

    <EditText
        android:id="@+id/ttcn_email"
        style="@style/edittext_khaibao"
        android:inputType="textEmailAddress"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>